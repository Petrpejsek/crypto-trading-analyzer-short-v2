# Production Environment Configuration for trader-short-v2
# Copy this file to .env.production and fill in your actual credentials
# NEVER commit .env.production to git!

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
TRADE_SIDE=SHORT
PORT=8888

# ============================================================================
# BINANCE API CREDENTIALS
# ============================================================================
# Get from: https://www.binance.com/en/my/settings/api-management
# Required permissions: Futures trading (read + write)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_RECV_WINDOW_MS=120000

# ============================================================================
# OPENAI API CREDENTIALS
# ============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_org_id_here
OPENAI_PROJECT=proj_your_project_id_here

# ============================================================================
# TEMPORAL CONFIGURATION
# ============================================================================
# Internal Docker network addresses - DO NOT CHANGE unless you know what you're doing
TEMPORAL_ADDRESS=temporal-short:7233
TEMPORAL_NAMESPACE=trader-short
TASK_QUEUE=entry-short
TASK_QUEUE_OPENAI=openai-short
TASK_QUEUE_BINANCE=binance-short

# ============================================================================
# POSTGRESQL (for Temporal cluster)
# ============================================================================
# Generate strong password: openssl rand -base64 32
POSTGRES_USER=temporal_short
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=temporal_short

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=production

# ============================================================================
# TRADING STRATEGY CONFIGURATION
# ============================================================================
# Strategy Updater (AI-powered SL/TP adjustments)
STRATEGY_UPDATER_MODEL=gpt-4o
STRATEGY_UPDATER_ENABLED=1
STRATEGY_UPDATER_AUDIT=1

# Max slippage tolerance (5% = 0.05)
MAX_SLIPPAGE_PCT=0.05

# ============================================================================
# HEALTH MONITOR
# ============================================================================
# Options: 'server' (deterministic, fast) or 'gpt' (AI-powered)
HEALTH_MONITOR_PROVIDER=server

# Only used if HEALTH_MONITOR_PROVIDER=gpt
# Options: 'gpt-4o-mini' (cheaper) or 'gpt-4o' (more sophisticated)
HEALTH_MONITOR_MODEL=gpt-4o-mini

# ============================================================================
# DEBUG (optional)
# ============================================================================
DEBUG_API=false

